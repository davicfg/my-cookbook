<%= flash[:success] %>
<h1><%= @recipe.title %></h1>
<h4><%="criado por: #{@recipe.user.email}" %></h4>
<% if @favorited  %>
  <%= link_to 'Desfavoritar', favorite_recipe_path(@recipe), method: :delete%>
<% elsif @current_user %>
  <%= link_to 'Favoritar', favorite_recipe_path(@recipe), method: :post %>
<% end %>

<h3>Detalhes</h3>
  <p>Tipo: <%= @recipe.recipe_type.name %></p>
  <p>Cozinha: <%= @recipe.cuisine.name %></p>
  <p>Dificuldade: <%= @recipe.difficulty %></p>
  <p>Tempo de preparo: <%= @recipe.cook_time %> minutos</p>
<h3>Ingredientes</h3>
<p><%= @recipe.ingredients %>
<h3>Como Preparar</h3>
<p><%= @recipe.method %>

<h3>Enviar para um amigo</h3>
<%= form_tag(share_recipe_path, method: :post) do %>
 <%= label_tag :email, "Email" %>
 <%= text_field_tag :email%>
 <%= label_tag :mensagem, "Mensagem" %>
 <%= text_field_tag :mensagem %>
 <%= submit_tag "Enviar" %>
<% end%>

