<h1>Cadastrar nova cozinha</h1>

<% if @cuisine.errors.any? %>
	<ul>
    <% @cuisine.errors.full_messages.each do |error| %>
      <li><%= error %></li>
    <% end %>
	</ul>
<% end %>

<%= form_for(@cuisine) do |f| %>
	<div>
		<%= f.label :name, 'Nome' %>
		<%= f.text_field :name, :required => true %>
	</div>
	<%= f.submit 'Enviar'%>
<% end %>